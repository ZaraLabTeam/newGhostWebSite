<h3>
  Last news
</h3>
<!-- Start News  =========================================================== -->
<div class="homepage-row">
  <!-- Post-->
  {{#get "posts" limit="4" include="tags" filter="tags:news+page:false" as |news| }}
    {{#foreach news}}
      <div class="post-module">
        <!-- Thumbnail-->
        <a href="{{url}}">
          <div class="thumbnail">
            <div class="date">
              <div class="day">{{date format="MMM"}}</div>
              <div class="month">{{date format="DD"}}</div>
            </div><img src="{{image absolute="true"}}"/>
          </div>
          <!-- Post Content-->
          <div class="post-content">
            <div class="category">News</div>
            <h1 class="title">{{title}}</h1>

            {{content words=25}}

          </div>
        </a>

      </div>
    {{/foreach}}
  {{/get}}

</div>
<!-- End News ============================================================== -->
