<style media="screen">
@keyframes slidy {
0% { left: 0%; }
20% { left: 0%; }
25% { left: -100%; }
45% { left: -100%; }
50% { left: -200%; }
70% { left: -200%; }
75% { left: -300%; }
95% { left: -300%; }
100% { left: -400%; }
}
body { margin: 0; }
div#slider { overflow: hidden;   margin-top: -175px; }
div#slider figure img { width: 20%; float: left; }
div#slider figure {
position: relative;
width: 500%;
margin: 0;
left: 0;
text-align: left;
font-size: 0;
animation: 30s slidy infinite;
height: 20%;
}
</style>
<!-- Start Carousel ================================================== -->
{{#get "posts" limit="5" include="tags" filter="tags:carousel+page:true" order="count.posts desc" as |carousels| }}
<div id="slider">
<figure>
 {{#foreach carousels}}

    <!-- <img src="{{image}}" alt="{{title}}" height="500px"> -->
     <img src="{{image}}" height="500em" alt="">
 {{/foreach}}
</figure>
</div>
{{/get}}



<!-- End Carousel ==================================================== -->
