<h2>
  Last events
</h2>

{{#get "posts" limit="3" include="tags" filter="tags:event+page:false"  as |events| }}

  {{#foreach events}}
    <div class="post-module">

      <!-- Thumbnail-->
      <a href="{{url}}">
        <div class="thumbnail">
          <div class="date">
            <div class="day">{{date format="MMM"}}</div>
            <div class="month">{{date format="DD"}}</div>
          </div>

          <img src="{{image absolute="true"}}"/>
        </div>

        <!-- Post Content-->
        <div class="post-content">
          <div class="category">Event</div>
          <h3 class="title">{{title}}</h1>

          {{content words=25}}
        </div>
      </a>

    </div>
  {{/foreach}}
{{/get}}
